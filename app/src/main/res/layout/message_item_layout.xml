<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:id="@+id/itemLayout">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:id="@+id/headerImage"
        android:layout_marginTop="17dp"
        android:layout_marginStart="14dp"
        app:shapeAppearanceOverlay="@style/circleImageStyle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_marginTop="18dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:singleLine="true"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:text=""/>
        <RelativeLayout
            android:id="@+id/likeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/num"
                android:textColor="#8E8E8E"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:text=""/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/yellow_right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="22dp"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/headerImageOne"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="37dp"
                app:shapeAppearanceOverlay="@style/circleImageStyle"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/headerImageTwo"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="55dp"
                app:shapeAppearanceOverlay="@style/circleImageStyle"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/headerImageThree"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="74dp"
                app:shapeAppearanceOverlay="@style/circleImageStyle"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/commentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@mipmap/yellow_right"
                android:text="回复"
                android:textColor="#D5AC5A"
                android:textSize="15sp"
                android:drawablePadding="8dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="22dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/commentContent"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:text=""
                android:layout_toStartOf="@id/reply"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/message_item__bg"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="8dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/topicImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/rightCircleImageStyle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/topicText"
                android:text=""
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/topicImg"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="18dp"
                android:textColor="#333333"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="start"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:textSize="10sp"
            android:textColor="#8E8E8E"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_marginStart="3dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEDED"
            android:layout_marginTop="13dp"/>
    </LinearLayout>
</LinearLayout>
