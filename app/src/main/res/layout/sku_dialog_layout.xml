<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="14dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/closeBtn"
                android:src="@mipmap/close"
                android:background="@null"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/closeBtn"
                android:layout_marginEnd="14dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/productName"
                    android:textSize="14sp"
                    android:textColor="#2B2B2B"
                    android:text="欧诗漫欧诗漫OSM珍珠白精萃美欧诗漫欧诗漫OSM珍珠白精萃美"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price"
                        android:textColor="#D3A952"
                        android:textSize="15sp"
                        android:text="¥39.90"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/score"
                        android:textColor="#D3A952"
                        android:textSize="12sp"
                        android:text="+200积分"
                        android:layout_marginStart="3dp"
                        android:visibility="gone"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/leftNum"
                    android:textColor="#999999"
                    android:textSize="11sp"
                    android:text="库存39909件"
                    android:layout_marginTop="11dp"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBEBEB"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规格"
            android:textSize="12sp"
            android:textColor="#2B2B2B"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list"
            android:layout_marginTop="11dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBEBEB"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买数量"
                android:textSize="13sp"
                android:textColor="#2B2B2B"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">
                <ImageButton
                    android:id="@+id/delBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/decrease_img"
                    android:background="@null"
                    android:foreground="?android:attr/selectableItemBackground"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numTxt"
                    android:textColor="#999999"
                    android:textSize="15sp"
                    android:text="1"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>

                <ImageButton
                    android:id="@+id/addBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/add_img"
                    android:background="@null"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="10dp">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:id="@+id/addCart"
                android:background="@drawable/add_cart_bg"
                android:text="加入购物车"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:foreground="?android:attr/selectableItemBackground"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:id="@+id/buyBtn"
                android:background="@drawable/buy_bg"
                android:text="立即购买"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:foreground="?android:attr/selectableItemBackground"/>
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/productImg"
        android:scaleType="centerCrop"
        android:layout_marginStart="15dp"
        android:background="#f3f3f3"/>

</RelativeLayout>
