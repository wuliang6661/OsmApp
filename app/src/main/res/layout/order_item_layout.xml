<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginBottom="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/orderBtn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderNum"
            android:textSize="13sp"
            android:textColor="#303030"
            android:text="订单号:0580850868668689"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderStatus"
            android:text="待付款"
            android:textColor="#FF5A5A"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productList"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:textSize="12sp"
            android:textColor="#272727"
            android:text="共4件商品合计:￥89.00"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical|end">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="84dp"
            android:layout_height="27dp"
            android:background="@drawable/cancel_order_bg"
            android:layout_marginEnd="16dp"
            android:text="取消订单"
            android:textColor="#B5B5B5"
            android:textSize="13sp"
            android:foreground="?android:attr/selectableItemBackground"/>

        <Button
            android:id="@+id/payBtn"
            android:layout_width="84dp"
            android:layout_height="27dp"
            android:background="@drawable/submit_bg"
            android:layout_marginEnd="16dp"
            android:text="付款"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:foreground="?android:attr/selectableItemBackground"/>

        <Button
            android:id="@+id/getProductBtn"
            android:layout_width="84dp"
            android:layout_height="27dp"
            android:background="@drawable/see_order_bg"
            android:layout_marginEnd="16dp"
            android:text="确认提货"
            android:textColor="#D4AB56"
            android:textSize="13sp"
            android:foreground="?android:attr/selectableItemBackground"/>

    </LinearLayout>

</LinearLayout>
