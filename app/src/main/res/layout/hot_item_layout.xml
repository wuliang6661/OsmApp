<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/itemBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/hot_item_bg"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num"
            android:text="1"
            android:textSize="15sp"
            android:textColor="#F6954D"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginStart="22dp"/>

        <ImageView
            android:id="@+id/endImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hot_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="23dp"/>

        <TextView
            android:layout_toStartOf="@id/endImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topicName"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/num"
            android:layout_marginStart="17dp"
            android:text="#年度好物推荐，欧诗漫精选#"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#323232"
            android:textSize="15sp"/>

    </RelativeLayout>
</RelativeLayout>
