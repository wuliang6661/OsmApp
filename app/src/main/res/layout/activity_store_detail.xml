<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.store.StoreDetailActivity"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/cartBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:text="购物车"
                android:textColor="#666666"
                android:textSize="11sp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:layout_marginStart="31dp"
                app:drawableTopCompat="@mipmap/detail_cart"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:textSize="9sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/image_oval"
                android:text="1"
                android:gravity="center"
                android:layout_alignEnd="@id/cart"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="15dp">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:id="@+id/addCart"
                android:background="@drawable/add_cart_bg"
                android:text="加入购物车"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:foreground="?android:attr/selectableItemBackground"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:id="@+id/buyBtn"
                android:background="@drawable/buy_bg"
                android:text="立即购买"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:foreground="?android:attr/selectableItemBackground"/>
        </LinearLayout>
    </LinearLayout>



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_above="@id/bottomLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.stx.xhb.androidx.XBanner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="375dp"
                    android:background="#00000000"
                    app:AutoPlayTime="4000"
                    app:isAutoPlay="false"
                    app:isHandLoop="true"
                    app:isShowIndicatorOnlyOne="true"
                    app:isShowNumberIndicator="false"
                    app:pageChangeDuration="800"
                    app:pointsContainerBackground="@android:color/transparent" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/detail_back"
                    android:background="@null"
                    android:id="@+id/backBtn"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="40dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/detail_share"
                    android:background="@null"
                    android:id="@+id/shareBtn"
                    android:layout_marginTop="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:textColor="#2B2B2B"
                android:textSize="15sp"
                android:text=""
                android:maxLines="2"
                android:minLines="2"
                android:ellipsize="end"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:textSize="14sp"
                android:textColor="#D3A952"
                android:text="￥89.00-120.00（+200-300积分）"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="14dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:visibility="invisible">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="市场价:"
                    android:textColor="#B2B2B2"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/oldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥178-240"
                    android:textColor="#B2B2B2"
                    android:textSize="12sp"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F7F7F7"/>

            <RelativeLayout
                android:id="@+id/selectSKUBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#2B2B2B"
                    android:text="选择：规格"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:src="@mipmap/white_right"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F7F7F7"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品详情"
                android:textColor="#2B2B2B"
                android:textSize="13sp"
                android:drawablePadding="3dp"
                app:drawableStartCompat="@mipmap/detail_img"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
                <com.tencent.smtt.sdk.WebView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/webView"/>
            </RelativeLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>