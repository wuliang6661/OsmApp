<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.order.OrderDetailActivity"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <RelativeLayout
        android:id="@+id/headLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/backBtn"
                android:background="@null"
                android:src="@mipmap/back_icon"
                android:foreground="?android:attr/selectableItemBackground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:text="订单详情"
                android:textColor="#333333"
                android:textSize="18sp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:layout_marginTop="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderNum"
                    android:textSize="13sp"
                    android:textColor="#303030"
                    android:text="订单号:0580850868668689"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderStatus"
                    android:text="待付款"
                    android:textColor="#FF5A5A"
                    android:textSize="13sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/productList"
                android:layout_marginTop="1dp"
                android:background="#ffffff"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <TextView
                    android:id="@+id/oldTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总计"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/oldPrice"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:text="¥650"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="17dp"/>

                <TextView
                    android:id="@+id/delTxt"
                    android:layout_below="@id/oldTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分抵扣"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/delPrice"
                    android:layout_below="@id/oldPrice"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:text="-¥150"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="17dp"/>

                <TextView
                    android:layout_below="@id/delTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单应付"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nowPrice"
                    android:layout_below="@id/delPrice"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:text="¥550"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="13dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="#ffffff"
                android:layout_marginTop="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计:"
                    android:textSize="12sp"
                    android:textColor="#272727"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"/>

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥89"
                    android:textSize="14sp"
                    android:textColor="#D3A952"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical">
                    <View
                        android:layout_width="3dp"
                        android:layout_height="15dp"
                        android:background="#D3A952" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#2B2B2B"
                        android:textSize="14sp"
                        android:text="订单信息"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F2F2F2"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderNum2"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="15dp"
                    android:text="订单编号： 85738947693476983476867"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderTime"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="15dp"
                    android:text="提交时间：2018-01-10 16:00:09"
                    android:layout_marginBottom="19dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_marginTop="49dp">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/see_order_bg"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="5dp"
                    android:text="确认提货"
                    android:textColor="#D4AB56"
                    android:textSize="15sp"
                    android:layout_marginStart="14dp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/submit_bg"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="5dp"
                    android:text="确认提货"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_marginStart="9dp"
                    android:layout_marginEnd="14dp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>