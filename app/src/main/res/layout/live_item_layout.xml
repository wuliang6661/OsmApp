<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:textColor="#CB9D3E"
                android:textSize="14sp"
                android:text="直播时间：3月07日 12:30"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/liveStatus"
                android:textColor="#CB9D3E"
                android:layout_alignParentEnd="true"
                android:textSize="13sp"
                android:text="正在直播"
                app:drawableStartCompat="@mipmap/live_pic_icon"
                app:drawableEndCompat="@mipmap/yellow_right_icon"
                android:gravity="center_vertical"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textSize="14sp"
            android:textColor="#333333"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="欧诗漫春季新品发布会"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:id="@+id/liveImage"
            android:layout_marginTop="13dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:background="#F3E7CF"
            app:shapeAppearanceOverlay="@style/roundedCornerImageStyle10"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notice"
        android:textColor="#333333"
        android:textSize="14sp"
        android:text="暂无相关内容"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>
</LinearLayout>
